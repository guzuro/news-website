---
interface Props {
  href: string;
  title: string;
  class?: string;
}

const { title, href, class: className } = Astro.props;
---

<a
  class="button group relative block cursor-pointer overflow-hidden bg-teal-600 px-3 py-1 transition-all hover:bg-white"
  class:list={[className]}
  href={href}
>
  <span
    class="-z-1 absolute bottom-0 left-0 h-0 w-0 bg-white transition-all duration-500 ease-out group-hover:h-full group-hover:w-full"
  ></span>
  <span
    class="relative z-10 text-white transition-colors duration-300 ease-in-out group-hover:text-teal-600"
  >
    {title}
  </span>
</a>
